<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="PU_HOSPITAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>eng.hospitalSystemService.db.entities.PersonalEntity</class>
        <class>eng.hospitalSystemService.db.entities.OddeleniEntity</class>
        <class>eng.hospitalSystemService.db.entities.PacientEntity</class>
        <class>eng.hospitalSystemService.db.entities.PredpisEntity</class>
        <class>eng.hospitalSystemService.db.entities.PokojEntity</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:derby://localhost:1527/hospitalSystemService"/>
            <property name="eclipselink.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="eclipselink.jdbc.user" value="admin"/>
            <property name="eclipselink.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>
